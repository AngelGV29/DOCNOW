<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DocNowApp.AgendaDisponibilidad.AgendaDisponibilidadPage"
             Title="Agenda disponibilidad">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">

            <Label Text="Seleccione los días de disponibilidad" FontAttributes="Bold" FontSize="18" HorizontalOptions="Center"/>

            <!-- Grid: una fila por día (7) y dos columnas (nombre + checkbox) -->
            <Grid ColumnDefinitions="*,*" RowSpacing="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" /> <!-- Lunes -->
                    <RowDefinition Height="Auto" /> <!-- Martes -->
                    <RowDefinition Height="Auto" /> <!-- Miércoles -->
                    <RowDefinition Height="Auto" /> <!-- Jueves -->
                    <RowDefinition Height="Auto" /> <!-- Viernes -->
                    <RowDefinition Height="Auto" /> <!-- Sábado -->
                    <RowDefinition Height="Auto" /> <!-- Domingo -->
                </Grid.RowDefinitions>

                <Label Text="Lunes" Grid.Row="0" HorizontalOptions="Start" Grid.Column="0" VerticalOptions="Center" />
                <CheckBox x:Name="cbLunes" Grid.Row="0" HorizontalOptions="Start"  Grid.Column="1" VerticalOptions="Center" />

                <Label Text="Martes" Grid.Row="1" Grid.Column="0" VerticalOptions="Center" />
                <CheckBox x:Name="cbMartes" Grid.Row="1" Grid.Column="1" VerticalOptions="Center" />

                <Label Text="Miércoles" Grid.Row="2" Grid.Column="0" VerticalOptions="Center" />
                <CheckBox x:Name="cbMiercoles" Grid.Row="2" Grid.Column="1" VerticalOptions="Center" />

                <Label Text="Jueves" Grid.Row="3" Grid.Column="0" VerticalOptions="Center" />
                <CheckBox x:Name="cbJueves" Grid.Row="3" Grid.Column="1" VerticalOptions="Center" />

                <Label Text="Viernes" Grid.Row="4" Grid.Column="0" VerticalOptions="Center" />
                <CheckBox x:Name="cbViernes" Grid.Row="4" Grid.Column="1" VerticalOptions="Center" />

                <Label Text="Sábado" Grid.Row="5" Grid.Column="0" VerticalOptions="Center" />
                <CheckBox x:Name="cbSabado" Grid.Row="5" Grid.Column="1" VerticalOptions="Center" />

                <Label Text="Domingo" Grid.Row="6" Grid.Column="0" VerticalOptions="Center" />
                <CheckBox x:Name="cbDomingo" Grid.Row="6" Grid.Column="1" VerticalOptions="Center" />
            </Grid>

            <BoxView HeightRequest="1" Color="#DDD" Margin="0,8"/>

            <!-- TimePickers globales solicitados -->
            <Label Text="Horario de jornada" FontAttributes="Bold" HorizontalOptions="Center" />
            <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
                <VerticalStackLayout>
                    <Label Text="Inicio" FontSize="12" />
                    <TimePicker x:Name="tpInicioJornada" Time="09:00:00" />
                </VerticalStackLayout>

                <VerticalStackLayout>
                    <Label Text="Fin" FontSize="12" />
                    <TimePicker x:Name="tpFinJornada" Time="17:00:00" />
                </VerticalStackLayout>
            </HorizontalStackLayout>

            <Label Text="Horario de descanso" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,8,0,0" />
            <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
                <VerticalStackLayout>
                    <Label Text="Inicio descanso" FontSize="12" />
                    <TimePicker x:Name="tpInicioDescanso" Time="13:00:00" />
                </VerticalStackLayout>

                <VerticalStackLayout>
                    <Label Text="Fin descanso" FontSize="12" />
                    <TimePicker x:Name="tpFinDescanso" Time="14:00:00" />
                </VerticalStackLayout>
            </HorizontalStackLayout>
            <Button
                x:Name="btnguardar"
                Text="Guardar"
                IsEnabled="False"
                
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                Margin="0,80,0,0"/> 

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>