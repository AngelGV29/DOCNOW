<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DocNowApp.AgendaDisponibilidad.AgendaDisponibilidadPage"
             Title="Agenda disponibilidad">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">

            <Grid WidthRequest="230" VerticalOptions="Center" HorizontalOptions="Center">
                <Picker
                    x:Name="pickerConsultorio"
                    FontSize="12"
                    WidthRequest="230"
                    
                    VerticalOptions="Center"
                    HorizontalOptions="Center"/>
                <Label
                    x:Name="lblDominio"
                    Text="Dominio de correo"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    Margin="10,0,0,0"
                    TextColor="Gray"
                    InputTransparent="True"/>
            </Grid>

            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="Desactivar la agenda de disponibilidad:" FontSize="18" FontAttributes="Bold" Grid.Row="6" Grid.Column="0" HorizontalOptions="End" VerticalOptions="Center" />
                <CheckBox x:Name="cbAgendaActiva"  HorizontalOptions="Center" />
            </HorizontalStackLayout>

            <Label Text="Seleccione los días de disponibilidad" FontAttributes="Bold" FontSize="18" HorizontalOptions="Center"/>

            <!-- Grid: una fila por día (7) y dos columnas (nombre + checkbox) -->
            <Grid ColumnDefinitions="auto,auto" ColumnSpacing="4" RowSpacing="4" HorizontalOptions="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" /> <!-- Lunes -->
                    <RowDefinition Height="Auto" /> <!-- Martes -->
                    <RowDefinition Height="Auto" /> <!-- Miércoles -->
                    <RowDefinition Height="Auto" /> <!-- Jueves -->
                    <RowDefinition Height="Auto" /> <!-- Viernes -->
                    <RowDefinition Height="Auto" /> <!-- Sábado -->
                    <RowDefinition Height="Auto" /> <!-- Domingo -->
                </Grid.RowDefinitions>

                <Label Text="Lunes" Grid.Row="0" Grid.Column="0" HorizontalOptions="End" VerticalOptions="Center" />
                <CheckBox x:Name="cbLunes" Grid.Row="0" HorizontalOptions="Start"  Grid.Column="1" VerticalOptions="Center" />

                <Label Text="Martes" Grid.Row="1" Grid.Column="0" HorizontalOptions="End" VerticalOptions="Center" />
                <CheckBox x:Name="cbMartes" Grid.Row="1" Grid.Column="1" VerticalOptions="Center" />

                <Label Text="Miércoles" Grid.Row="2" Grid.Column="0" HorizontalOptions="End" VerticalOptions="Center" />
                <CheckBox x:Name="cbMiercoles" Grid.Row="2" Grid.Column="1" VerticalOptions="Center" />

                <Label Text="Jueves" Grid.Row="3" Grid.Column="0" HorizontalOptions="End" VerticalOptions="Center" />
                <CheckBox x:Name="cbJueves" Grid.Row="3" Grid.Column="1" VerticalOptions="Center" />

                <Label Text="Viernes" Grid.Row="4" Grid.Column="0" HorizontalOptions="End" VerticalOptions="Center" />
                <CheckBox x:Name="cbViernes" Grid.Row="4" Grid.Column="1" VerticalOptions="Center" />

                <Label Text="Sábado" Grid.Row="5" Grid.Column="0" HorizontalOptions="End" VerticalOptions="Center" />
                <CheckBox x:Name="cbSabado" Grid.Row="5" Grid.Column="1" VerticalOptions="Center" />

                <Label Text="Domingo" Grid.Row="6" Grid.Column="0" HorizontalOptions="End" VerticalOptions="Center" />
                <CheckBox x:Name="cbDomingo" Grid.Row="6" Grid.Column="1" VerticalOptions="Center" />
            </Grid>

            <BoxView HeightRequest="1" Color="#DDD" Margin="0,20,0,20"/>

            <!-- TimePickers globales solicitados -->
            <Label Text="Horario de jornada" FontAttributes="Bold" HorizontalOptions="Center" FontSize="18"/>
            <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
                <VerticalStackLayout Spacing="10" Margin="0,0,50,0">
                    <Label Text="Inicio de la jornada:" FontSize="14" />
                    <TimePicker x:Name="tpInicioJornada" Time="09:00:00" />
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="10">
                    <Label Text="Fin de la jornada:" FontSize="14" />
                    <TimePicker x:Name="tpFinJornada" Time="17:00:00" />
                </VerticalStackLayout>
            </HorizontalStackLayout>

            <Label Text="Horario de descanso" FontAttributes="Bold" HorizontalOptions="Center" FontSize="18" Margin="0,40,0,0" />
            <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
                <VerticalStackLayout Spacing="10" Margin="0,0,50,0">
                    <Label Text="Inicio descanso" FontSize="14" />
                    <TimePicker x:Name="tpInicioDescanso" Time="13:00:00" />
                </VerticalStackLayout>


                <VerticalStackLayout Spacing="10">
                    <Label Text="Fin descanso" FontSize="14" />
                    <TimePicker x:Name="tpFinDescanso" Time="14:00:00" />
                </VerticalStackLayout>

            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="Desactivar horario de descanso:" FontSize="14" HorizontalOptions="End" VerticalOptions="Center" />
                <CheckBox x:Name="cbHorarioDescanso"  HorizontalOptions="Center" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="Selecciona la duración de las citas para generar los turnos:" FontSize="14" HorizontalOptions="End" VerticalOptions="Center" />
                <Picker
                    x:Name="pickerDuracionSlot"
                    FontSize="12"
                    WidthRequest="230"
    
                    VerticalOptions="Center"
                    HorizontalOptions="Center"/>
            </HorizontalStackLayout>


            <Button
                x:Name="btnguardar"
                Text="Guardar"
                IsEnabled="False"
                
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                Margin="0,80,0,0"/> 

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>