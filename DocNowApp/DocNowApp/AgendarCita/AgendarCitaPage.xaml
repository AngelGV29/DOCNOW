<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DocNowApp.AgendarCita.AgendarCitaPage"
             Title="AgendarCitaPage">
    <VerticalStackLayout>
        <Label 
            Text="Agende su cita"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontAttributes="Bold"
            FontSize="20"/>
        <Label 
            Text="Horarios Disponibles"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="14"
            Margin="0,12,0,0"/>
        <DatePicker
             x:Name="dateFechaNac"
             FontFamily="Arial"
             FontSize="12"
             Format="dd/mm/yyyy"
             WidthRequest="199"
             MinimumDate="01/01/1900"
             Grid.Column="0"
             VerticalOptions="Center"
             Margin="0,20,0,0"/>
        <CollectionView x:Name="collectionFranjas"
                SelectionMode="None"
                HeightRequest="350"
                WidthRequest="600">
            <!-- ItemsSource lo llenamos desde code-behind -->
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="8" Margin="4" HasShadow="False" BorderColor="#DDD">
                        <Grid ColumnDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="0" RowDefinitions="Auto,Auto">
                            <!-- Línea superior: Día y Horario -->
                            <Label Grid.Row="0" Grid.Column="0"
                           Text="{Binding NombreDia}" FontAttributes="Bold" />
                            <Label Grid.Row="0" Grid.Column="1"
                           Text="{Binding RangoHorario}" HorizontalOptions="End" />
                            <Label Grid.Row="0" Grid.Column="2"
                           Text="{Binding TextoDuracion}" HorizontalOptions="End" />
                            <!--<Label Grid.Row="0" Grid.Column="3"
                           Text="{Binding AgendaActiva, Converter={StaticResource BoolToActivoConversor}}"
                           HorizontalOptions="End" /> -->

                            <!-- Línea inferior: botones -->
                            <StackLayout Grid.Row="1" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalOptions="Start" Margin="0,10,0,0">
                                <!-- <Button x:Name="btnEditar" Text="Editar" Clicked="btnEditar_Clicked" CommandParameter="{Binding .}" />
                                <Button x:Name="btnEliminar" Text="btnEliminar" Clicked="btnEliminar_Clicked" CommandParameter="{Binding .}" Margin="8,0,0,0" /> -->
                                <Button x:Name="btnElegirTurno" Text="Elegir Turno"  CommandParameter="{Binding .}" />
                            </StackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button x:Name="btnAceptar" Text="Aceptar" HeightRequest="50" WidthRequest="130" />
    </VerticalStackLayout>
</ContentPage>