<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DocNowApp.AgendarCita.ElegirTurnoPage"
             Title="ElegirTurnoPage">
    <VerticalStackLayout>
        <Label 
            Text="Selecciona tu Horario"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <RadioButton Margin="0,10,0,0"/>
        <Label Text="8:00 - 8:30" FontSize="18" Margin="0,2,0,0" />
        <Label Text="Disponible" FontSize="18" Margin="0,2,0,12" TextColor="Green" />

        <!-- Horario 2 (vertical) -->
        <RadioButton Margin="0,10,0,0"/>
        <Label Text="8:30 - 9:00" FontSize="18" Margin="0,2,0,0"/>
        <Label Text="Ocupado" FontSize="18" Margin="0,2,0,12" TextColor="Red" />

        <!-- Horario 3 (vertical) -->
        <RadioButton Margin="0,10,0,0"/>
        <Label Text="9:00 - 9:30" FontSize="18" Margin="0,2,0,0"/>
        <Label Text="Disponible" FontSize="18" Margin="0,2,0,12" TextColor="Green" />

    </VerticalStackLayout>
</ContentPage>