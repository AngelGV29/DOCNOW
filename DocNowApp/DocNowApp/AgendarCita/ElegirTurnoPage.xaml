<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DocNowApp.AgendarCita.ElegirTurnoPage"
             Title="Elegir Turno">

    <VerticalStackLayout Padding="20" Spacing="15">

        <!-- TÃ­tulo -->
        <Label Text="Selecciona un turno disponible"
               FontSize="20"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <!-- CollectionView para mostrar los turnos -->
        <CollectionView x:Name="TurnosCollectionView"
                        SelectionMode="Single"
                        ItemsSource="{Binding Turnos}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" ColumnDefinitions="Auto,*,Auto">
                        <!-- RadioButton -->
                        <RadioButton GroupName="Turnos"
                                     IsChecked="{Binding IsSelected}"
                                     VerticalOptions="Center" />

                        <!-- Horario -->
                        <Label Text="{Binding Horario}"
                               Grid.Column="1"
                               FontSize="16"
                               VerticalOptions="Center" />

                        <!-- Estado -->
                        <Label Text="{Binding Estado}"
                               Grid.Column="2"
                               FontSize="16"
                               TextColor="{Binding EstadoColor}"
                               VerticalOptions="Center" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Botones -->
        <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
            <Button x:Name="btnCancelar"
                    Text="Cancelar"
                    BackgroundColor="#E57373"
                    TextColor="White"
                    WidthRequest="120"
                    Clicked="btnCancelar_Clicked"/>

            <Button x:Name="btnAceptar"
                    Text="Aceptar"
                    BackgroundColor="#64B5F6"
                    TextColor="White"
                    WidthRequest="120"
                    Clicked="btnAceptar_Clicked"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>
