<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DocNowApp.AgendarCita.ElegirTurnoPage"
             Title="Elegir Turno">

    <VerticalStackLayout>
        <Label
            Text="Selecciona un Turno"
            FontSize="23"
            HorizontalOptions="Center"
            Margin="0,20,0,10" />

        <CollectionView>
            <CollectionView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>8:00 - 9:00</x:String>
                </x:Array>
            </CollectionView.ItemsSource>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal" Margin="0,10,0,0">
                        <RadioButton GroupName="Horarios" VerticalOptions="Center"/>
                        <Label Text="{Binding}" FontSize="18" Margin="10,0" VerticalOptions="Center"/>
                        <Label Text="Disponible" FontSize="18" Margin="10,0" VerticalOptions="Center"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- MÃ¡s espacio visual -->
        <BoxView HeightRequest="300" Color="Transparent"/>

        <!-- Botones juntos horizontalmente, uno a la izquierda y uno a la derecha -->
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button
                x:Name="btnAceptar"
                Text="Aceptar"
                Margin="50,0,20,0"
                WidthRequest="120"
                FontSize="18"/>
            <Button
                x:Name="btnCancelar"
                Text="Cancelar"
                Margin="50,0,0,0"
                WidthRequest="120"
                FontSize="18"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>



