<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DocNowApp.Login.LoginPage"
             Title="LoginPage"
             xmlns:navegacion="clr-namespace:DocNowApp.Navegacion"
             xmlns:inicio="clr-namespace:DocNowApp.Inicio">
    
    <VerticalStackLayout>
        <navegacion:BotonRegresar Ruta="InicioPage" />
        <Label 
            Margin="0,100,0,50"
            Text="Inicio de sesion"
            FontSize="40"
            FontFamily="Arial"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry
            x:Name="txtCorreo"
            FontSize="12"
            Placeholder="Correo electrónico"
            MaxLength="100"
            TextChanged="txtCorreo_TextChanged"
            WidthRequest="500"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Margin="0,20,0,0"/>
        <Grid WidthRequest="500"
              HorizontalOptions="Center"
              Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>
        
            <Entry
                x:Name="txtContrasenia"
                FontSize="12"
                Placeholder="Contraseña"
                MaxLength="255"
                IsPassword="True"
                TextChanged="txtContrasenia_TextChanged"
                VerticalOptions="Center"
                Grid.Column="0"/>
            <ImageButton
                x:Name="btnMostrarContrasenia"
                Padding="0"
                Source="mostrar_contrasenia.png"
                WidthRequest="40"
                HeightRequest="40"
                Clicked="btnMostrarContrasenia_Clicked"
                Grid.Column="1"
                VerticalOptions="Center"
                HorizontalOptions="End"/>
        </Grid>
        <Button
            x:Name="btnLogin"
            Text="Inciar sesión"
            IsEnabled="False"
            Clicked="btnLogin_Clicked"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Margin="0,80,0,0"/>
    </VerticalStackLayout>
</ContentPage>