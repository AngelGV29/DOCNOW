<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DocNowApp"
             xmlns:globales="clr-namespace:DocNowApp.Globales"
             x:Class="DocNowApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <!--Es una clase IValueConverter que convierte un tipo de dato bool a un texto específico,
            de manera que un objeto puede bindear (binding) su valor desde el propio .xaml-->
            <globales:BoolToActivoConversor x:Key="BoolToActivoConversor"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
